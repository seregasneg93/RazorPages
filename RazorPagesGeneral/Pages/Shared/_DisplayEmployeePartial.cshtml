@model Employee

@{
    var photoParth = $"/images/{Model.PhotoPath ?? "noimage.png"}";
    var ShowButtons = (bool)ViewData["ShowButtons"];

}

@*выствялем для разных дисплеев*@
<div class="card-deck">
    <div class="card m-3 cardBoxShadow">
        <div class="card-header text-center cardHeaderStyle">
            <h3>@Model.Name</h3>
        </div>

        <div class="text-center cardBodyStyle">
            <img class="card-img-top imageThumbnail" src="@photoParth" asp-append-version="true" />
        </div>

        @if (ShowButtons)
        {
            <divc class="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-Id="@Model.Id" class="btn btn-success m-1 buttonShadow">Просмотреть</a>
                <a asp-page="/Employees/Edit" asp-route-Id="@Model.Id" class="btn btn-primary m-1 buttonShadow">Изменить</a>
                <a asp-page="/Employees/Delete" asp-route-Id="@Model.Id" class="btn btn-danger m-1 buttonShadow">Удалить</a>
            </divc>
        }
    </div>
</div>